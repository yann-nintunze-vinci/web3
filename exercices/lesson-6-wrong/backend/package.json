{
  "main": "index.ts",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc && tsup",
    "start:dev": "node --import=tsx --watch src/index.ts",
    "start:prod": "node dist/index.js",
    "check": "biome check --write",
    "test": "vitest run",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/express5": "^1.1.2",
    "@asteasolutions/zod-to-openapi": "7.3.4",
    "@pothos/core": "^4.10.0",
    "@pothos/plugin-prisma": "^4.12.0",
    "@pothos/plugin-validation": "^4.2.0",
    "@prisma/cli-dev": "^0.8.3",
    "@prisma/client": "^6.16.3",
    "bcrypt": "^6.0.0",
    "cors": "2.8.5",
    "dotenv": "^17.2.1",
    "express": "5.1.0",
    "express-rate-limit": "8.0.1",
    "graphql": "^16.11.0",
    "helmet": "^8.1.0",
    "http-status-codes": "2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pino": "9.9.0",
    "pino-http": "10.5.0",
    "ruru": "^2.0.0-beta.30",
    "swagger-ui-express": "5.0.1",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/supertest": "6.0.3",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.2.4",
    "pino-pretty": "13.1.1",
    "prisma": "^6.16.3",
    "supertest": "7.1.4",
    "tsup": "8.5.0",
    "tsx": "4.20.4",
    "typescript": "5.9.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "outDir": "dist",
    "format": [
      "esm"
    ],
    "sourcemap": true,
    "clean": true,
    "dts": true,
    "splitting": false,
    "skipNodeModulesBundle": true
  },
  "graphql": {
    "schema": "https://localhost:3000/graphql",
    "documents": "**/*.{graphql,js,ts,jsx,tsx}"
  }
}
